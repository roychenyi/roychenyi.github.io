<?xml version="1.0" encoding="UTF-8"?>
<tool>
<data type="number" key="TOOLS_VERSION" value="2.0"/>
<data type="boolean" key="GENERIC_TOOLS_AVAILABLE" value="true"/>
<!-- 配置application -->
<toolbox scope="application">
<tool key="escape" class="org.apache.velocity.tools.generic.EscapeTool"/>
<tool key="date" class="org.apache.velocity.tools.generic.DateTool"/>
<tool key="math" class="org.apache.velocity.tools.generic.MathTool"/>
</toolbox>
<toolbox scope="request">
<tool key="link" class="org.apache.velocity.tools.view.LinkTool"/>
<tool key="params" class="org.apache.velocity.tools.view.ParameterTool"/>
<tool key="cookie" class="org.apache.velocity.tools.view.tools.CookieTool"/>
</toolbox>
